---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <div class="flex flex-col min-h-screen px-16 py-8">
        <h1 class="font-bold">Hi, I'm Bryan!</h1>
        <p>Software Engineer 🛠️ - Matcha Guy 🍵 - Ghibli Fan 🇯🇵</p>
        <p>
          This is both my portfolio and a blog where I'll share what I'm working
          on, technologies I enjoy, tips and tricks, and more.
        </p>
        <h4 class="font-bold">Get updates on new posts</h4>
        <div>
          <input type="email" placeholder="Email address" class="border" />
          <button>Subscribe</button>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
