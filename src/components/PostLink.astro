---
import FormattedDate from "./FormattedDate.astro";
interface Props {
  post: any;
}

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}/`}>
  <div class="flex flex-col gap-2">
    {
      post.data.heroImage && (
        <img
          class="rounded-xl"
          width={720}
          height={360}
          src={post.data.heroImage}
          alt=""
        />
      )
    }
    <h4 class="text-2xl hover:text-primary font-bold">{post.data.title}</h4>
    <p class="text-md text-muted-foreground">{post.data.description}</p>
    <p class="text-sm text-muted-foreground">
      <FormattedDate date={post.data.pubDate} />
    </p>
  </div>
</a>
