---
type Props = {
  title: string;
  description: string;
  image: string;
};

const { title, description, image } = Astro.props;
---

<div class="flex flex-col">
  <div>
    <img width={200} height={200} src={image} alt="" />
  </div>
  <div>
    <h4>{title}</h4>
    <p>{description}</p>
  </div>
</div>
